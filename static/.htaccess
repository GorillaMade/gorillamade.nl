# Force UTF-8 encoding
AddDefaultCharset UTF-8

# Serve HTML files as default
DirectoryIndex index.html

# Rewrite URLs
RewriteEngine On

# Rewrite /send naar form-handler.php (voor HTMX formulierverzending)
RewriteRule ^send$ form-handler.php [L]

# Rewrite URLs to remove .html
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Prevent directory browsing
Options -Indexes

# Redirect www to non-www (optioneel, aanpassen indien nodig)
# RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
# RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Redirect HTTP to HTTPS (optioneel)
# RewriteCond %{HTTPS} off
# RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# .htaccess in public/
RedirectMatch ^/$ /nl/

# Cache control for static assets
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

# Security headers
<IfModule mod_headers.c>
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "DENY"
  Header always set X-XSS-Protection "1; mode=block"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# PHP support for contact form
<FilesMatch "\.php$">
  SetHandler application/x-httpd-php
</FilesMatch>

# Custom 404 page
ErrorDocument 404 /404.html
